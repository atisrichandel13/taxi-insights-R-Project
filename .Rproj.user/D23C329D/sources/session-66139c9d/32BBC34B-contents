        <div class="card">
            <div class="card-header">
                <h2>ðŸ“Š Historical Aggregation</h2>
                <div>
                    <select id="p_count">
                        <option value="1">1 Passenger</option>
                        <option value="2">2 Passengers</option>
                        <option value="3">3 Passengers</option>
                        <option value="4">4 Passengers</option>
                    </select>
                    <button onclick="fetchStats()">Run Query</button>
                    <span id="loader-1" class="loader">Processing...</span>
                </div>
            </div>

            <div class="kpi-grid" id="stats-container" style="opacity: 0.3;">
                <div class="kpi-box">
                    <div class="kpi-label">Total Trips Analyzed</div>
                    <div class="kpi-value blue" id="val-trips">-</div>
                </div>
                <div class="kpi-box">
                    <div class="kpi-label">Average Fare</div>
                    <div class="kpi-value green" id="val-fare">-</div>
                </div>
                <div class="kpi-box">
                    <div class="kpi-label">Average Tip</div>
                    <div class="kpi-value purple" id="val-tip">-</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h2>ðŸ§  Linear Regression Model</h2>
                <button class="secondary" onclick="runModel()">Train Model (Sampled)</button>
            </div>
            <p style="color: var(--text-secondary); font-size: 14px;">
                Trains a linear model (<code>Tip ~ Distance</code>) on a live sample to determine price elasticity.
            </p>
            
            <span id="loader-2" class="loader">Training Model...</span>
            <div id="model-result" class="model-output"></div>
        </div>

    </div>

    <script>
        // Formatter for Currency
        const fmtMoney = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' });
        const fmtNum = new Intl.NumberFormat('en-US');

        async function fetchStats() {
            const count = document.getElementById('p_count').value;
            document.getElementById('loader-1').style.display = 'inline';
            document.getElementById('stats-container').style.opacity = '0.5';

            try {
                const res = await fetch(`./stats/fare?count=${count}`);
                const data = await res.json();
                const rec = data[0]; // Get first record

                // Update UI with nice animations
                document.getElementById('val-trips').innerText = fmtNum.format(rec.total_trips);
                document.getElementById('val-fare').innerText = fmtMoney.format(rec.avg_fare);
                document.getElementById('val-tip').innerText = fmtMoney.format(rec.avg_tip);
                
                document.getElementById('stats-container').style.opacity = '1';
            } catch (err) {
                console.error(err);
                alert("API Error");
            } finally {
                document.getElementById('loader-1').style.display = 'none';
            }
        }

        async function runModel() {
            const out = document.getElementById('model-result');
            const loader = document.getElementById('loader-2');
            
            loader.style.display = 'inline-block';
            out.style.display = 'none';

            try {
                const res = await fetch(`./stats/model`);
                const data = await res.json();

                // Format the math equation
                const sign = data.intercept >= 0 ? '+' : '-';
                const equation = `y = ${data.slope}x ${sign} ${Math.abs(data.intercept)}`;

                out.innerHTML = `
> TRAINING COMPLETED SUCCESSFULLY
> -------------------------------
> FORMULA:   ${equation}
> R-SQUARED: ${data.r_squared}
>
> INSIGHT:   ${data.message}
                `.trim();
                
                out.style.display = 'block';
            } catch (err) {
                console.error(err);
            } finally {
                loader.style.display = 'none';
            }
        }
    </script>
