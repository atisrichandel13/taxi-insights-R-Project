<body>

    <div class="card">
        <h1>üöï NYC Taxi Analytics</h1>
        <p>Powered by R + DuckDB (3 Million Rows)</p>
        
        <div style="margin: 20px 0;">
            <label>Filter by Passenger Count:</label>
            <select id="p_count">
                <option value="1">1 Passenger</option>
                <option value="2">2 Passengers</option>
                <option value="4">4 Passengers (Minivan)</option>
            </select>
        </div>

        <button onclick="fetchStats()">Analyze Data</button>

        <div id="result">Waiting for data...</div>
    </div>

    <script>
        async function fetchStats() {
            const count = document.getElementById('p_count').value;
            const resultDiv = document.getElementById('result');
            
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = "‚è≥ Crunching 3 million rows...";

            try {
                // Call the R API
                const response = await fetch(`./stats/fare?count=${count}`);
                const data = await response.json();
                
                // Format the JSON nicely
                const formatted = JSON.stringify(data[0], null, 2); 
                resultDiv.innerHTML = `<pre>${formatted}</pre>`;
            } catch (err) {
                resultDiv.innerHTML = "Error connecting to R API.";
                console.error(err);
            }
        }
    </script>
